<%= render "shared/header" %>
<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">アーティスト登録</h2>
        <%# 「モデル名」にはUserモデルであれば@userを渡しましょう。%>
        <%# 「新規登録機能へのパス」は、devise導入後にrails routesを実行してdevise/registrations#createへのパスを確認し、記載してください。 %>
      <%= form_with model: @artist, url: artist_registration_path, class: 'registration-main', local: true do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
        <div class="field">
          <div class='form-text-wrap'>
            <label class="form-text">アーティスト写真</label>
            <span class="indispensable">必須</span>
            <p class='info__text'>クリックしてファイルをアップロード</p>
          </div>
            <%= f.file_field :image, id:"artist_image" %>
        </div>
        <div class="field">
          <div class='form-text-wrap'>
            <label class="form-text">ID</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_field :artist_id, class: :form__text, id:"artist_artist_id", autofocus: true, placeholder:" 半角英数字で入力してください" %>
          <p class='info__text'>※英字と数字の両方を含めて設定してください</p>
        </div>

        <div class="field">
          <%= f.label :name, "アーティスト名" %>
          <span class="indispensable">必須</span><br />
          <%= f.text_field :name, class: :form__text, id:"artist_name", placeholder:" アーティスト名を入力してください" %>
        </div>

        <div class="field">
          <%= f.label :member, "メンバー" %>
          <span class="indispensable">必須</span><br />
          <%= f.text_field :member, class: :form__text, id:"artist_member", placeholder:" 例) Vo/〇〇,Gt/〇〇" %>
        </div>
        
        <div class="field">
          <%= f.label :info, "プロフィール" %><br />
          <%= f.text_area :info, class: :form__text, id:"artist_info",placeholder:" 250文字以内でプロフィールを入力してください" %>
        </div>

        <div class="field">
          <%= f.label :city_id, "活動拠点" %>
          <span class="indispensable">必須</span><br />
          <%= f.collection_select(:city_id, City.all, :id, :name, {}, {class:"form__text"}) %>
        </div>

        <div class="field">
          <%= f.label :genre_id, "ジャンル" %>
          <span class="indispensable">必須</span><br />
          <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"form__text"}) %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <span class="indispensable">必須</span><br />
          <%= f.email_field :email, class: :form__text, id:"artist_email", autocomplete: "email", placeholder:" PC・携帯どちらでも可" %>
        </div>

        <div class="field">
          <%= f.label :website, "Website" %><br />
          <%= f.text_field :website, class: :form__text, id:"artist_website", placeholder:" ウェブサイトやYouTubeページのURLを入力してください。例) https://~" %>
        </div>

        <div class="field">
          <%= f.label :twitter, "Twitter" %><br />
          <%= f.text_field :twitter, class: :form__text, id:"artist_twitter", placeholder:" @ユーザー名を入力してください" %>
        </div>

        <div class="field">
          <%= f.label :instagram, "Instagram" %><br />
          <%= f.text_field :instagram, class: :form__text, id:"artist_instagram", placeholder:" ユーザー名を入力してください" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %>
          <span class="indispensable">必須</span><br />
          <%= f.password_field :password, class: :form__text, id:"user_password", autocomplete: "new-password", placeholder:" 6文字以上の半角英数字"  %>
          <p class='info__text'>※英字と数字の両方を含めて設定してください</p>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード確認" %>
          <span class="indispensable">必須</span><br />
          <%= f.password_field :password_confirmation, class: :form__text, id:"user_password_confirmation", autocomplete: "new-password", placeholder:" 同じパスワードを入力してください"  %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>