<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ログイン</h2>
      <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
        <%# 「モデル名」にはUserモデルであれば@userを渡しましょう。%>
        <%# 「ログイン機能へのパス」は、devise導入後にrails routesを実行してdevise/sessions#createへのパスを確認し、記載してください。 %>
      <%= form_with model: @artist, url: artist_session_path, class: 'registration-main', local: true do |f| %>
        
        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <span class="indispensable">必須</span><br />
          <%= f.email_field :email, class: :form__text, id:"artist_email", autofocus: true, autocomplete: "email", placeholder:" メールアドレス" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %>
          <span class="indispensable">必須</span><br />
          <%= f.password_field :password, class: :form__text, id:"artist_password", autocomplete: "current-password", placeholder:" 6文字以上の半角英数字" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: :form__btn %>
        </div>
      <% end %>
    </div>
  </div>
</div>